<UserControl
    x:Class="ApplicationUnderTest.Wpf.Controls.Controls.ContextMenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <TextBlock
        Text="Click to open context menu"
        Style="{DynamicResource DefaultControlStyle}">
        <TextBlock.ContextMenu>
            <ContextMenu>
                <TextBlock Text="This is a text block" />
            </ContextMenu>
        </TextBlock.ContextMenu>
    </TextBlock>
</UserControl>
