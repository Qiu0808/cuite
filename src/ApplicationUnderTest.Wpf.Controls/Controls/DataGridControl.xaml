<UserControl
    x:Class="ApplicationUnderTest.Wpf.Controls.Controls.DataGridControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:ApplicationUnderTest.Wpf.Controls.Controls">
    
    <!-- Resources -->
    <UserControl.Resources>
        <ObjectDataProvider x:Key="genders" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="local:Gender"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    
    <DataGrid
        ItemsSource="{Binding Source={x:Static local:Mocked.Persons}}"
        AutoGenerateColumns="False"
        Style="{DynamicResource DefaultControlStyle}">
        <DataGrid.Columns>
            <DataGridTextColumn
                Header="Name"
                Binding="{Binding Name}" />
            <DataGridCheckBoxColumn
                Header="Customer"
                Binding="{Binding IsCustomer}" />
            <DataGridComboBoxColumn
                Header="Gender"
                SelectedItemBinding="{Binding Gender}"
                ItemsSource="{Binding Source={StaticResource genders}}" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>