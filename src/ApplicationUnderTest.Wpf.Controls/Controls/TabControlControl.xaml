<UserControl
    x:Class="ApplicationUnderTest.Wpf.Controls.Controls.TabControlControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ApplicationUnderTest.Wpf.Controls.Controls">

    <TabControl
        ItemsSource="{Binding Source={x:Static local:Mocked.Persons}}"
        DisplayMemberPath="Name"
        Style="{DynamicResource DefaultControlStyle}">
        <TabControl.ContentTemplate>
            <DataTemplate />
        </TabControl.ContentTemplate>
    </TabControl>

</UserControl>