<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ApplicationUnderTest.Wpf.Controls.Controls">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/MainWindowResources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:CustomControl}" BasedOn="{StaticResource DefaultControlStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CustomControl}">
                    <TextBlock Text="This is a custom control" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>