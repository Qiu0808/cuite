<UserControl
    x:Class="Aut.Wpf.Controls.Controls.ListViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="clr-namespace:Aut.Wpf.Controls.Models">
    
    <ListView
        AutomationProperties.AutomationId="mSGVZSH9uEeMMEVCBqPd5w"
        ItemsSource="{Binding Source={x:Static models:Mocked.Persons}}"
        DisplayMemberPath="Name"
        Style="{DynamicResource DefaultControlStyle}">
        <ListView.View>
            <GridView>
                <GridViewColumn
                    Header="Name"
                    DisplayMemberBinding="{Binding Name}" />
                <GridViewColumn
                    Header="Customer"
                    DisplayMemberBinding="{Binding IsCustomer}" />
                <GridViewColumn
                    Header="Gender"
                    DisplayMemberBinding="{Binding Gender}" />
            </GridView>
        </ListView.View>
    </ListView>
    
</UserControl>